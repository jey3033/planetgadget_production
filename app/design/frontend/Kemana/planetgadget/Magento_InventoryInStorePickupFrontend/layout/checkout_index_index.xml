                                                                         <item name="socail-custom-form" xsi:type="array">
                                                                            <item name="component" xsi:type="string">Kemana_SocialLogin/js/checkout/social-login</item>
                                                                            <item name="config" xsi:type="array">
                                                                                <item name="template" xsi:type="string">Kemana_SocialLogin/checkout/social-login</item>
                                                                            </item>
                                                                        </item>
                                                                    </item>
                                                                </item>                   
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>

