    <script type="text/javascript">
    require(["jquery","matchMedia"],function ($) {
        $(document).ready(function () {

            $('.minicart-wrapper').mouseover(function () {
                if($('.minicart-wrapper .ui-widget-content:before').hasClass('active')){
                    $('.minicart-wrapper .ui-widget-content:before').removeClass('active');
                    $('body').removeClass('active');
                }
                if(!$('.minicart-wrapper .ui-widget-content:before').hasClass('active')){
                    $('.minicart-wrapper .ui-widget-content:before').addClass('active');
                    $('body').addClass('active');
                }
            });
            $(document).mouseout(function (e) {
                let accountWrap = $('.minicart-wrapper');

                // if the target of the click isn't the container nor a descendant of the container
                if (!accountWrap.is(e.target) && accountWrap.has(e.target).length === 0) {
                    $('.minicart-wrapper .ui-widget-content:before').removeClass('active');
                    $('body').removeClass('active');
                }
            });

        });
    });
</script>
