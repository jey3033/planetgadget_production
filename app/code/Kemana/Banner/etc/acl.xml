<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Kemana_Core::menu">
                    <resource id="Kemana_Banner::bannerslider" title="Kemana Banner Slider" sortOrder="10">
                        <resource id="Kemana_Banner::banner" title="Manage Banner" sortOrder="20"/>
                        <resource id="Kemana_Banner::slider" title="Manage Slider" sortOrder="30"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Kemana_Banner::configuration" title="Kemana Banner Slider"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
