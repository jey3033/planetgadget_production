<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <container name="uploaded_file_cover_letter">
            <argument name="data" xsi:type="array">    
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">120</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <block class="Kemana\Jobs\Block\Adminhtml\Applications\Edit\AdditionalFileField" name="coverletter.file.field" template="Kemana_Jobs::/mdata/coverletter_field.phtml"/>
            </htmlContent>
        </container>
        <container name="uploaded_file_idcard">
            <argument name="data" xsi:type="array">    
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">125</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <block class="Kemana\Jobs\Block\Adminhtml\Applications\Edit\AdditionalFileField" name="idcard.file.field" template="Kemana_Jobs::/mdata/idcard_field.phtml"/>
            </htmlContent>
        </container>
        <container name="uploaded_file_education_certificate">
            <argument name="data" xsi:type="array">    
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">130</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <block class="Kemana\Jobs\Block\Adminhtml\Applications\Edit\AdditionalFileField" name="education.certificate.file.field" template="Kemana_Jobs::/mdata/educationcert_field.phtml"/>
            </htmlContent>
        </container>
    </fieldset>    
</form>
