<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="fme_jobs" resource="default" engine="innodb"
           comment="FME Jobs Table">
        <column xsi:type="int" name="salary_from" unsigned="false" nullable="true" identity="false" comment="Salary From"/>
        <column xsi:type="int" name="salary_to" unsigned="false" nullable="true" identity="false" comment="Salary To"/>
    </table>
    <table name="fme_jobs_application" resource="default" engine="innodb"
           comment="FME Jobs Application Table">
        <column xsi:type="varchar" name="cover_letter_file" nullable="true" length="255" comment="Cover Letter File"/>
        <column xsi:type="varchar" name="id_card_file" nullable="true" length="255" comment="ID Card File"/>
        <column xsi:type="varchar" name="education_cert_file" nullable="true" length="255" comment="Education Certificate File"/>
    </table>
</schema>
