<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="homepage.main.content" remove="true"/>

        <referenceContainer name="content">
            <container name="homepage.main.content1" label="Main_Content" htmlTag="div" htmlClass="cms-main-container"
                       before="-"/>
        </referenceContainer>

        <move element="home-page-category-top-section" destination="homepage.main.content1" before="-"/>
        <move element="home-page-new-arrivals" destination="homepage.main.content1"
              after="home-page-category-top-section"/>
        <move element="kemana_brand_featured" destination="homepage.main.content1" after="home-page-new-arrivals"/>
        <move element="home-page-bestsellers" destination="homepage.main.content1" after="kemana_brand_featured"/>

        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="recommended-from-seller-home-page">
                <arguments>
                    <argument name="block_id" xsi:type="string">recommended_from_seller_home_page</argument>
                </arguments>
            </block>
            <block class="Kemana\Common\Block\Home\Content" name="homepage.bank.promotion" as="homepage_bank_promotion"
                   template="Kemana_Common::homepage/bank-promotion.phtml"/>
        </referenceContainer>

        <move element="recommended-from-seller-home-page" destination="homepage.main.content1"
              after="home-page-bestsellers"/>
        <move element="home-page-recently-viewed-products" destination="homepage.main.content1" after="-"/>

        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="news.update.block" as="news_update_block"
                   after="home-page-inner-banner">
                <arguments>
                    <argument name="block_id" xsi:type="string">home_page_blog_and_news</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="home-page-two-col-banner">
                <arguments>
                    <argument name="block_id" xsi:type="string">home-page-inner-banner</argument>
                </arguments>
            </block>
        </referenceContainer>

        <move element="news.update.block" destination="homepage.main.content1"
              before="home-page-recently-viewed-products"/>
        <move element="homepage.bank.promotion" destination="homepage.main.content1" before="news.update.block"
              after="recommended-from-seller-home-page"/>
        <move element="home-page-two-col-banner" destination="homepage.main.content1"
              after="recommended-from-seller-home-page" before="homepage.bank.promotion"/>
    </body>
</page>
